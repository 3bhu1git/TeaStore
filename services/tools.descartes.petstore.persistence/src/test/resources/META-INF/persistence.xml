<?xml version="1.0" encoding="UTF-8"?>

<!-- TESTING CONFIGURATION ONLY! Uses HSQL for testing in Eclipse/Maven during development and testing. Is ignored during final build. -->

<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="tools.descartes.petstore.persistence" transaction-type="RESOURCE_LOCAL">
		<class>tools.descartes.petstore.persistence.domain.PersistenceProduct</class>
		<class>tools.descartes.petstore.persistence.domain.PersistenceCategory</class>
		<class>tools.descartes.petstore.persistence.domain.PersistenceOrderItem</class>
		<class>tools.descartes.petstore.persistence.domain.PersistenceOrder</class>
		<class>tools.descartes.petstore.persistence.domain.PersistenceUser</class>
		<class>tools.descartes.petstore.persistence.repository.DatabaseManagementEntity</class>
		<!-- Converters -->
        <class>tools.descartes.petstore.persistence.domain.converters.LocalDateAttributeConverter</class>
        <class>tools.descartes.petstore.persistence.domain.converters.LocalDateTimeAttributeConverter</class>
		<properties>
       		<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url"    value="jdbc:hsqldb:mem:test" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
        	<property name="eclipselink.logging.level" value="INFO" />
      		<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      		<property name="eclipselink.ddl-generation.output-mode" value="database" />
     	</properties>
	</persistence-unit>
</persistence>
